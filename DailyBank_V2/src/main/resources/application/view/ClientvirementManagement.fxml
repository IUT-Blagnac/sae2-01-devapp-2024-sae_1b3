<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.view.ClientController">
    <TableView fx:id="ClientTable" prefHeight="398.0" prefWidth="570.0">
        <columns>
            <TableColumn fx:id="idNumCli" text="idNumCli" />
            <TableColumn fx:id="nom" text="nom" />
            <TableColumn fx:id="prenom" text="prenom" />
            <TableColumn fx:id="adressePostale" text="adressePostale" />
            <TableColumn fx:id="email" prefWidth="48.0" text="email" />
         <TableColumn fx:id="telephone" minWidth="0.0" prefWidth="112.0" text="telephone" />
         <TableColumn fx:id="estInactif" text="estInactif" />
        </columns>
      <VBox.margin>
         <Insets left="80.0" right="100.0" />
      </VBox.margin>
    </TableView>
    <Button onAction="#loadClient" prefHeight="26.0" prefWidth="141.0" text="Charger Client">
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin></Button>
   <Button prefHeight="26.0" prefWidth="141.0" text="Virement ">
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin>
   </Button>
</VBox>
